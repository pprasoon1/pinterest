<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-300 flex items-center justify-center">
  <div class="w-full h-screen bg-zinc-300 bg-center bg-cover flex items-center justify-center">
    <div class="w-[50vw] h-[75vh] bg-zinc-100 px-5 py-10 rounded-[30px]">
      <h1 class="text-3xl mb-2 text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none">Create New Account.</h1>
      <form action="/register" method="post">
        <input class="border-2  rounded-md block w-full px-3 py-2 " type="text" name="username" placeholder="username">
        <input class="border-2  rounded-md block w-full px-3 py-2 " type="email"  name="email" placeholder="email">
        <input class="border-2  rounded-md block w-full px-3 py-2 " type="text"  name="fullname" placeholder="Full Name">

        <input class="border-2  rounded-md block w-full px-3 py-2" type="password" name="password" placeholder="password">
        <input class="border-2  rounded-md block w-full px-3 py-2" type="number" name="contact"  placeholder="contact" >

        <input
          class="border-2 -rounded-full block w-full px-3 py-2 bg-red-600 rounded-full text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-purple-600 focus:ring-opacity-50 ..."
          type="submit" value="create new account">
          <p class="text-xs font-semibold text-zinc-700 mt-5 w-3/4 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service; Opens a new tab and acknowledge you've read our Privacy Policy</p>
      <a class="inline-block mt-2 text-sm font-semibold text-zinc-700 text-center w-full hover:text-blue-600" href="/">Login existing account.</a>

      </form>
    </div>

  </div>
</div>

